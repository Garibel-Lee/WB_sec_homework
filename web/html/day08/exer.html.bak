<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
</head>

<body>
<script>
    //检测用户名的合法性
    function chkUserName() {


        var txt = document.getElementById("userName").value;//获得用户名输入框
    
        if (txt.length>= 6 && txt.length <= 16) {
            alert("输入正确");
			    document.writeln(txt.value().length);
        document.writeln(txt.length);
        } else {
            alert("请输入6- 16位长度的用户名");
        }
    }

    function chkPwd() {
        var txt = document.getElementById("#pwd1").value;

        if (txt.value.length >= 6 && txt.value.length <= 16) {
            if (txt.value() == document.getElementById("#pwd2").value) {
                alert("输入正确");
                return true;
            } else
                return false;

        }
        e1se
        {
            alert("请输入6- 16位密码");
            return false;

        }
    }
</script>
<h1>表单验证(注册页面)</h1>
<form action="">
    <table border="0" width="600">
        <!-- onchange="chkUserName()" 内容变化，并且失去焦点
            onblur 失去焦点出发
          -->
        <tr>
            <td width="150px">用户名</td>
            <td width="200px"><input type="text" onblur="chkUserName()" placeholder="请输入6-16位长度的用户名" name="userName"
                                     class="cls1" id="userName"/></td>
            <td width="250px"><span id="msgUserName">&nbsp;</span></td>
        </tr>
        <tr>
            <td>密码：</td>
            <td><input type="password" name="pwd1" class="cls1" id="pwd1"/></td>
            <td><span id="msgPwd1">&nbsp;</span></td>
        </tr>
        <tr>
            <td>确认密码</td>
            <td><input type="password" name="pwd2" onblur="chkPwd()" class="cls1" id="pwd2"/></td>
            <td><span id="msgPwd2">&nbsp;</span></td>
        </tr>
        <tr>
            <td>邮箱</td>
            <td><input type="text" placeholder="请输入邮箱" name="userEmail" class="cls1" id="userEmail"/></td>
            <td><span id="msgEmail">&nbsp;</span></td>
        </tr>
        <tr>
            <td>电话</td>
            <td><input type="text" placeholder="请输入手机号" name="userPhone" class="cls1" id="userPhone"/></td>
            <td><span id="msgPhone">&nbsp;</span></td>
        </tr>
        <tr>
            <td>身份证号</td>
            <td><input type="text" placeholder="请输入18位长度的身份证号码" name="userIdCard" class="cls1" id="userIdCard"/></td>
            <td><span id="msgIdCard">&nbsp;</span></td>
        </tr>
        <tr>
            <td colspan="3"><input type="submit" value="注册"/><input type="reset" value="重写"/></td>
        </tr>
    </table>
</form>

</body>
</html>